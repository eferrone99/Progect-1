                try {

                    choice = input.nextInt();
                    break;
                } catch (InputMismatchException e) {
                    input.nextLine();
                    System.out.print("You must enter an integer");
                }
            }

            switch (choice) {
                case 1:
                    System.out.print("Enter book title: ");
                    while (true) {
                        try {
                            int value = input.nextInt();
                            //
                            break;
